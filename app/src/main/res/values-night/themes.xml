<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SpaceFlights" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryVariant">@color/blue_1</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/blue_2</item>
        <item name="colorOnSecondary">@color/blue_3</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_3</item>
        <item name="android:colorBackground">@color/blue_3</item>

        <item name="android:forceDarkAllowed">false</item>

        <item name="android:textColorPrimary">@color/gray_light</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/gray_light</item>
        <item name="android:background">@color/blue_2</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyleCustom</item>
    </style>

    <style name="ButtonStyleCustom" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_light</item>
    </style>
</resources>